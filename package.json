{
  "name": "auteurium",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "infrastructure/aws-cdk"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd services/api && npm run dev",
    "build": "./tools/scripts/build-all.sh",
    "setup": "./tools/scripts/setup-dev.sh",
    "deploy": "./tools/scripts/deploy-stack.sh",
    "generate": "./tools/scripts/generate-graphql.sh",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd services/api && npm run build",
    "typecheck": "npm run typecheck:web",
    "typecheck:web": "cd apps/web && npm run typecheck",
    "test": "npm run test:api && npm run test:integration",
    "test:api": "cd services/api && npm run test",
    "test:integration": "echo 'Integration tests not implemented yet'",
    "test:e2e": "echo 'E2E tests not implemented yet'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}